<?xml version="1.0" encoding="utf-8"?>
<config>
 <nav>
  <!-- Navigation menu ***************************** -->
  <nav_menu>
   <label>nav_menu</label>
   <controller>index</controller>
   <action>index</action>

   <pages>
    <!-- Authenticated Users -->
    <userInfo>
     <label>Welcome%html.br%%user.name%</label>
     <controller>index</controller>
     <action>%user.name%</action>
     <resource>member</resource>
     <class>welcome</class>
     <pages>
      <post>
       <label>Post</label>
       <controller>post</controller>
       <resource>member</resource>
       <class>local</class>
      </post>
      <settings>
       <label>Settings</label>
       <controller>settings</controller>
       <resource>member</resource>
       <class>local</class>
      </settings>
     </pages>
    </userInfo>

    <!-- Guests -->
    <register>
     <label>Join Now</label>
     <controller>auth</controller>
     <action>register</action>
     <resource>guest</resource>
     <class>join</class>
    </register>
  
    <!-- Authenticated Users -->
    <signOut>
     <label>Sign Out</label>
     <controller>auth</controller>
     <action>signOut</action>
     <resource>member</resource>
    </signOut>
  
    <!-- Guests -->
    <signIn>
     <label>Sign In</label>
     <controller>auth</controller>
     <action>signIn</action>
     <resource>guest</resource>
    </signIn>

    <bookmarks>
     <label>Bookmarks</label>
     <action>index</action>
     <pages>
      <mine>
       <label>Mine</label>
       <controller>index</controller>
       <action>%user.name%</action>
       <class>local</class>
       <resource>member</resource>
      </mine>
      <explore>
       <label>Explore</label>
       <controller>index</controller>
       <action>index</action>
       <class>global</class>
      </explore>
      <lookup>
       <label>Lookup URL</label>
       <controller>url</controller>
       <action>index</action>
       <class>global last</class>
      </lookup>
     </pages>
    </bookmarks>
  
    <people>
     <label>People</label>
     <controller>people</controller>
     <action>index</action>
     <pages>
      <mine>
       <label>My network</label>
       <controller>network</controller>
       <action>%user.name%</action>
       <class>local</class>
       <resource>member</resource>
      </mine>
      <explore>
       <label>Explore</label>
       <controller>people</controller>
       <action>index</action>
       <class>global last</class>
      </explore>
     </pages>
    </people>
  
    <tags>
     <label>Tags</label>
     <controller>tags</controller>
     <action>index</action>
     <pages>
      <mine>
       <label>Mine</label>
       <controller>tags</controller>
       <action>%user.name%</action>
       <class>local</class>
       <resource>member</resource>
      </mine>
      <explore>
       <label>Explore</label>
       <controller>tags</controller>
       <action>index</action>
       <class>global last</class>
      </explore>
     </pages>
    </tags>

    <!-- Everyone -->
    <help>
     <label>Help</label>
     <controller>help</controller>
     <action>index</action>
     <pages>
      <center>
       <label>Help Center</label>
       <controller>help</controller>
       <action>index</action>
       <class>global</class>
      </center>
      <basics>
       <label>Basics</label>
       <controller>help</controller>
       <action>basics</action>
       <class>global</class>
      </basics>
      <developer>
       <label>Developers</label>
       <controller>help</controller>
       <action>developer</action>
       <class>global</class>
      </developer>
      <about>
       <label>About</label>
       <controller>help</controller>
       <action>about</action>
       <class>global last</class>
      </about>
     </pages>
    </help>
  
   </pages>
  </nav_menu>

 </nav>

</config>
